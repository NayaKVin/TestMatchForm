
@{
    ViewBag.Title = "Test Match Form";
    Layout = "~/Views/_Layout/_LayoutTestMatch.cshtml";
    //http://localhost:65148/MatchForm/TestMchForm
}

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row" style="align-content:center">
                    <h2>Test Match <b>Form</b></h2>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Match Name</label>
                            <input type="text" class="form-control" id="MtchName" required>
                        </div>
                        <div class="form-group">
                            <label>Team 1</label>
                            <SELECT name="country" class="form-control" id="Team1" required>
                                <OPTION value="India">India</OPTION>
                                <OPTION value="Australia">Australia</OPTION>
                                <OPTION value="SouthAfrica">South Africa</OPTION>
                                <OPTION value="England">England</OPTION>
                                <OPTION value="Ireland">Ireland</OPTION>
                            </SELECT>
                        </div>
                        
                        <div class="form-group">
                            <label>Start Time</label>
                            <input type="time" class="form-control" id="MtchTym" required>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Match Date</label>
                            <input type="date" class="form-control" id="MtchDt" required>
                        </div>
                        <div class="form-group">
                            <label>Team 2</label>
                            <SELECT name="country" class="form-control" id="Team2" required>
                                <OPTION value="India">India</OPTION>
                                <OPTION value="Australia">Australia</OPTION>
                                <OPTION value="SouthAfrica">South Africa</OPTION>
                                <OPTION value="England">England</OPTION>
                                <OPTION value="Ireland">Ireland</OPTION>
                            </SELECT>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <textarea class="form-control" id="MtchAddr" required></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row modal-body">
                <div class="col-sm-6">
                    <a href="#deleteTeamModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete All</span></a>
                </div>
                <div class="col-sm-6">
                    <a href="#addTeammodel" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Players</span></a>
                    
                </div>
            </div>

            <table class="table table-striped table-hover" id="playerTbl">
                <thead>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="selectAll">
                                <label for="selectAll"></label>
                            </span>
                        </th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Postion</th>
                        <th>Team</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="playerData">

                    

                </tbody>
            </table>
            <div class="row modal-footer">

                <input type="submit" class="btn btn-success" value="Save" id="btnSave">
            </div>

            <div class="clearfix">
                <div class="hint-text">Showing <b>1</b> out of <b>1</b> entries</div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- ADD Player Modal HTML -->
<div id="addTeammodel" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Add Player</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" id="PlyrNm" required>
                    </div>
                    <div class="form-group">
                        <label>Type</label>
                        <SELECT name="country" class="form-control" id="PlyrTy" required>
                            <OPTION value="Batsman">Batsman</OPTION>
                            <OPTION value="Bowler">Bowler</OPTION>
                            <OPTION value="Filder">Filder</OPTION>
                            <OPTION value="WicketKeeper">Wicketkeeper</OPTION>
                            <OPTION value="AllRounder">All rounder</OPTION>
                        </SELECT>
                    </div>
                    <div class="form-group">
                        <label>Postion</label>
                        <input type="text" class="form-control" id="PlyrPos" required>
                    </div>
                    <div class="form-group">
                        <label>Team</label>
                        <SELECT name="country" class="form-control" id="PlyrCntry" required>
                            <OPTION value="India">India</OPTION>
                            <OPTION value="Australia">Australia</OPTION>
                            <OPTION value="SouthAfrica">South Africa</OPTION>
                            <OPTION value="England">England</OPTION>
                            <OPTION value="Ireland">Ireland</OPTION>
                        </SELECT>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="button" class="btn btn-success" value="Add" onclick="AddPlayer()" data-dismiss="modal">
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Edit Modal HTML -->
<div id="editEmployeeModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Edit Player</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <textarea class="form-control" required></textarea>
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="submit" class="btn btn-info" value="Save">
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal HTML -->
<div id="deleteTeamModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Delete Player</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete these Records?</p>
                    <p class="text-warning"><small>This action cannot be undone.</small></p>
                </div>
                <div class="modal-footer">
                    <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                    <input type="button" data-dismiss="modal" class="btn btn-danger" value="Delete" onclick="deleteRow('playerTbl')">
                </div>
            </form>
        </div>
    </div>
</div>

